#!/usr/bin/env bash
set -e
if [[ ! -d "/home/hikaru/github.com/tuanemuy/dot-reservation" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/hikaru/github.com/tuanemuy/dot-reservation")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/hikaru/github.com/tuanemuy/dot-reservation" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/hikaru/github.com/tuanemuy/dot-reservation/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/hikaru/github.com/tuanemuy/dot-reservation/.envrc" "/home/hikaru/github.com/tuanemuy/dot-reservation/.direnv"/*.rc
